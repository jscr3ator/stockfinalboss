<!DOCTYPE html>
<html>
<head>
    <title>Stock Game - Host</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        :root {
            --bg-color: #0f172a;
            --panel-bg: rgba(30, 41, 59, 0.7);
            --text-primary: #f8fafc;
            --text-secondary: #94a3b8;
            --accent-green: #10b981;
            --gold: #fbbf24;
            --silver: #e2e8f0;
            --bronze: #b45309;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: var(--bg-color);
            background-image: 
                radial-gradient(at 0% 0%, rgba(16, 185, 129, 0.15) 0px, transparent 50%),
                radial-gradient(at 100% 100%, rgba(59, 130, 246, 0.15) 0px, transparent 50%);
            color: var(--text-primary);
            height: 100vh;
            display: flex;
            flex-direction: column;
            overflow: hidden; 
        }

        .container {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 2vh 4vw;
        }

        h1 {
            font-size: 5vh;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin: 2vh 0 4vh 0 !important;
            text-shadow: 0 4px 12px rgba(0,0,0,0.5);
            font-weight: 800;
            background: linear-gradient(to right, #fff, #94a3b8);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .wrapper {
            width: 100%;
            max-width: 1600px !important;
            flex: 1;
            display: flex;
            flex-direction: column;
            margin: 0 auto !important;
            min-height: 0; /* Critical for inner scrolling */
        }

        .leaderboard-panel {
            background: var(--panel-bg) !important;
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 24px;
            padding: 2rem;
            box-shadow: 0 20px 50px rgba(0,0,0,0.4);
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-bottom: 2vh;
        }

        .leaderboard-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(255,255,255,0.03);
            padding: 1.5vh 2vw;
            border-radius: 12px;
            border-left: 6px solid transparent;
        }

        .leaderboard-row > span:first-child {
            font-size: 3vh !important; 
            display: flex;
            align-items: center;
            gap: 1.5rem;
            font-weight: 600;
        }

        .rank {
            background: rgba(255,255,255,0.1);
            min-width: 5vh;
            height: 5vh;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-size: 2.5vh;
            color: var(--text-secondary);
        }

        .stat-value {
            font-size: 3.5vh !important;
            font-family: 'Monaco', 'Consolas', monospace;
            font-weight: 700;
            color: var(--accent-green);
        }

        /* JOIN INSTRUCTIONS FOOTER */
        .join-footer {
            margin-top: auto;
            padding: 2vh 0;
            text-align: center;
            width: 100%;
            border-top: 1px solid rgba(255,255,255,0.1);
            background: rgba(15, 23, 42, 0.8);
        }

        .join-text {
            font-size: 4.5vh; /* Larger than usernames */
            font-weight: 700;
            color: var(--text-primary);
            letter-spacing: 1px;
        }

        .join-url {
            color: var(--gold);
            text-decoration: none;
            text-shadow: 0 0 15px rgba(251, 191, 36, 0.3);
        }

        /* Top 3 Highlighting */
        .leaderboard-row:nth-child(1) { background: linear-gradient(90deg, rgba(251, 191, 36, 0.1), transparent); border-left-color: var(--gold); }
        .leaderboard-row:nth-child(1) .rank { color: var(--gold); border: 2px solid var(--gold); background: transparent; }
        .leaderboard-row:nth-child(2) { border-left-color: var(--silver); }
        .leaderboard-row:nth-child(2) .rank { color: var(--silver); border: 2px solid var(--silver); }
        .leaderboard-row:nth-child(3) { border-left-color: var(--bronze); }
        .leaderboard-row:nth-child(3) .rank { color: var(--bronze); border: 2px solid var(--bronze); }

        .leaderboard-panel::-webkit-scrollbar { width: 8px; }
        .leaderboard-panel::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.2); border-radius: 4px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="wrapper">
            <h1 style="text-align: center;">Live Leaderboard</h1>
            <div id="leaderboard" class="leaderboard-panel">
                <div style="text-align: center; color: #9ca3af; font-size: 2rem; padding-top: 10%;">Waiting for players...</div>
            </div>
            
            <div class="join-footer">
                <div class="join-text">
                    Join at: <span class="join-url">stockfinalboss.jscreator.dev</span>
                </div>
            </div>
        </div>
    </div>

    <script>
        const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
        const host = window.location.host || 'localhost';

        try {
            const ws = new WebSocket(`${protocol}//${host}`);

            ws.onmessage = (event) => {
                const data = JSON.parse(event.data);
                if (data.type === 'leaderboard') {
                    const list = document.getElementById('leaderboard');
                    if (data.leaderboard.length === 0) {
                        list.innerHTML = '<div style="text-align: center; color: #9ca3af; font-size: 2rem; padding-top: 10%;">No active players</div>';
                        return;
                    }
                    list.innerHTML = data.leaderboard.map((p, i) => `
                        <div class="leaderboard-row">
                            <span><span class="rank">#${i + 1}</span> ${p.username}</span>
                            <span class="stat-value">$${p.balance.toLocaleString(undefined, {maximumFractionDigits: 0})}</span>
                        </div>
                    `).join('');
                }
            };
        } catch (e) {
            console.warn("WebSocket initialization failed:", e);
        }
    </script>
</body>
</html>
